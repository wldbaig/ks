@model ArticleDetailViewModel
@{ 
    ViewBag.Title = "Add Article Items";
    var article = Model.ArticleID;
}

<link href="~/Content/css/devoops/tooltip.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-sm-12">   
            <div class="box-">             
                <div class="box-content">
                    <p class="bg-danger">@Html.ValidationSummary(true)</p>
                    @if (TempData["ERROR"] != null)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span>@TempData["ERROR"] </span>
                        </div>
                    }

                    <fieldset>
                        <legend>Article Item</legend>
                        <div class="form-group">
                            @Html.HiddenFor(mod => mod.ArticleID)

                            @if (ViewBag.EditMode == "true")
                            {
                                @Html.HiddenFor(mod => mod.ArticleDetails.ID) 
                            }
                            @Html.LabelFor(model => model.ArticleDetails.ColorId, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.ArticleDetails.ColorId, (SelectList)ViewBag.ColorList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ArticleDetails.ColorId)
                            </div>
                            <div class="col-sm-6">
                            </div>
                        </div>
                    
                    </fieldset>

                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <button type="submit" name="submit" value="ItemsList" class="btn btn-primary btn-label-left">
                                Save
                            </button>
                             
                            <a href="~/Article/ArticleDetails/@article" class="btn btn-primary btn-label-left">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
     </script>

}
