@model SaleModel
@{
    var baseUrl = System.Web.Configuration.WebConfigurationManager.AppSettings["BaseURL"];
    ViewBag.Title = "BhagwanPura Sale Report";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Report Management</a></li>
                <li><a href="~/Report/BPSale">BhagwanPura Sale Report</a></li>

            </ol>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12 col-sm-12">

            <div class="box">
                <div class="box-header">
                    <div class="box-name">
                        <i class="fa fa-search"></i>
                        <span>BhagwanPura Sale Report </span>
                    </div>
                    <div class="box-icons">
                        <a class="collapse-link">
                            @*<i class="fa fa-chevron-up"></i>*@
                        </a>
                    </div>
                    <div class="no-move"></div>
                </div>
                <div class="box-content">
                    <div class="row">
                        <p class="bg-danger">@Html.ValidationSummary(true)</p>
                        @if (TempData["ERROR"] != null)
                        {
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <span>@TempData["ERROR"] </span>
                            </div>
                        }
                        @if (TempData["SUCCESS"] != null)
                        {
                            <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <span>@TempData["SUCCESS"] </span>
                            </div>
                        }


                        <div class="form-group">
                            <div class="col-sm-4">
                                @Html.Label("Start Date", new { @class = "control-label" })

                            </div>
                            <div class="col-sm-4">
                                @Html.Kendo().DatePickerFor(model => model.StartDate)
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4">
                                @Html.Label("End Date", new { @class = "control-label" })

                            </div>
                            <div class="col-sm-4">
                                @Html.Kendo().DatePickerFor(model => model.EndDate).Max(DateTime.Now.Date.AddDays(1))
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                @Html.Label("Category", new { @class = "control-label" })

                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Category, "Select Category", new { @class = "populate placeholder", id = "s2_with_tag" })
                            </div>
                        </div>

                       
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary btn-label-left">
                                    Search
                                </button>
                                <a href="~/Report/BPSale" class="btn btn-primary btn-label-left">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>

}