@model KS.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_NewLoginLayout.cshtml";
}

<div id="page-login" class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
       
        <div class="box">
            <div class="box-content">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @*@Html.AntiForgeryToken()*@

                    <div class="text-center">
                        <h3 class="page-header">Login</h3>
                    </div>

                    <p class="text-danger">@Html.ValidationSummary(true)</p>
                    if (Model != null && Model.DisplayMessage)
                    {
                        <p class="text-danger">@Model.Message</p>
                    }

                    <div class="form-group">
                        @*<label class="control-label">Username</label>*@
                        @Html.LabelFor(m => m.LoginID)
                        @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", placeholder = "UserName" })
                        @Html.ValidationMessageFor(m => m.LoginID)
                    </div>
                    <div class="form-group">
                        @*<label class="control-label">Password</label>*@
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @style = "margin-left:0px" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jquerylib")
    @Scripts.Render("~/bundles/jqueryval")
}
