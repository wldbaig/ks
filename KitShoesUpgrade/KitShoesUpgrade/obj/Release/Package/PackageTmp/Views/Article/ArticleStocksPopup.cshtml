@model  ArticleDetailViewModel   
@{ 
    ViewBag.Title = "Add Article Stock";
    var article = Model.ArticleDetails.ArticleId;
}

<link href="~/Content/css/devoops/tooltip.css" rel="stylesheet" />

@using (Html.BeginForm())
{
     
    <div class="row">
        <div class="col-xs-12 col-sm-12">     
            <div class="box-">                
                <div class="box-content">
                    <p class="bg-danger">@Html.ValidationSummary(true)</p>
                    @if (TempData["ERROR"] != null)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span>@TempData["ERROR"] </span>
                        </div>
                    }

                    <fieldset>
                        <legend>Article Item</legend>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.ArticleDetails.ID)
                            @Html.HiddenFor(m => m.ArticleDetails.ArticleId)        
                            @Html.LabelFor(model => model.ArticleDetails.ColorId, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.DisplayFor(model => model.ArticleDetails.Color.ColorName)     
                            </div>
                            <div class="col-sm-6">
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Carton, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @(Html.Kendo().NumericTextBox<int>()
.Name("Carton")
                            .Min(0)
                                )
                                @Html.ValidationMessageFor(model => model.Carton)
                            </div>
                            <div class="col-sm-6">
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Pair, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @(Html.Kendo().NumericTextBox<int>()
.Name("Pair")
                            .Min(0)
                                )
                                @Html.ValidationMessageFor(model => model.ArticleDetails.Pairs)
                            </div>
                            <div class="col-sm-6">
                            </div>

                        </div>

                    </fieldset>

                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <button type="submit" name="submit" value="ItemsList" class="btn btn-primary btn-label-left">
                                Save
                            </button>
                            <a href="~/Article/ArticleDetails/@article" class="btn btn-primary btn-label-left">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    
    </script>

}
