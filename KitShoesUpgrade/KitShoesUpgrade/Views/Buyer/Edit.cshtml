@model Buyer
@{
    ViewBag.Title = "Edit Buyer";
}


<link href="~/Content/css/devoops/tooltip.css" rel="stylesheet" />

@using (Html.BeginForm("Edit", "Buyer", FormMethod.Post, new { id = "uploadForm1", enctype = "multipart/form-data" }))
{

    <div class="row">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">User Management</a></li>
                <li><a href="~/Buyer">Buyers</a></li>
                <li><a href="#">Edit</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12">

            <div class="box">
                <div class="box-header">
                    <div class="box-name">
                        <i class="fa fa-search"></i>
                        <span>Buyer </span>
                    </div>
                    <div class="box-icons">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                    <div class="no-move"></div>
                </div>
                <div class="box-content">
                    <p class="bg-danger">@Html.ValidationSummary(true)</p>
                    @if (TempData["ERROR"] != null)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span>@TempData["ERROR"] </span>
                        </div>
                    }

                    <fieldset>
                                   @Html.HiddenFor(m=>m.ID)
                        <div class="form-group">
                            <div class="col-sm-2">
                                @Html.LabelFor(model => model.Name, "Buyer Name", new { @class = "control-label" })
                                <span class="required-red">*</span>
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-2">
                                @Html.LabelFor(model => model.Phone, "Phone", new { @class = "control-label" })
                                <span class="required-red">*</span>
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>
                         
                        <div class="form-group">
                            <div class="col-sm-2">
                                @Html.LabelFor(model => model.Address, "Address", new { @class = "control-label" })
                                <span class="required-red">*</span>
                            </div>
                            <div class="col-sm-4">
                                @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>


                    </fieldset>

                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary btn-label-left">
                                Update
                            </button>
                            <a href="~/Customer" class="btn btn-primary btn-label-left">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="ajax-loading" id="loading"><p></p></div>
}

@section Styles{
    <style scoped>
        .required-red {
            color: red;
        }
    </style>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    
}
